{
	"compilerOptions": {
		/* Basic Options */
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["dom", "esnext"],
		"outDir": "./dist",

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": ["node_modules"]
}
